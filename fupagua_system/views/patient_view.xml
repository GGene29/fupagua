<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

    <!-- View Tree -->
        <record model="ir.ui.view" id="patient_view">
            <field name="name">patient</field>    
            <field name="model">patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="lastname"/>
                    <field name="date_of_birth"/>
                    <field name="age"/>
                    <field name="phone"/>
                    <field name="current_area_specialization_id"/>
                </tree>
            </field>
        </record>

    <!-- View Form -->
        <record model="ir.ui.view" id="patient_form">
            <field name="name">patient</field>    
            <field name="model">patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="lastname"/>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="phone"/>
                            <field name="current_area_specialization_id" options="{'no_open': True, 'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    <!-- Action Server View -->
        <record model="ir.actions.server" id="patient_action_server">
            <field name="name">patient_server</field>
            <field name="model_id" ref="model_patient"/>
            <field name="state">code</field>
            <field name="code">
              action = {
                "type": "ir.actions.act_window",
                "view_mode": "tree,form",
                "res_model": model._name,
              }
            </field>
        </record>

    <!-- Menu -->
        <menuitem name="Patient" id="patient_menu_item" sequence="70" action="patient_action_server"/>

    </data>
</odoo>