<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

    <!-- View Tree -->
        <record model="ir.ui.view" id="clinical_history_view">
            <field name="name">clinical history</field>    
            <field name="model">clinical_history</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code_history"/>
                    <field name="questionnarie_id"/>
                </tree>
            </field>
        </record>

    <!-- View Form -->
        <record model="ir.ui.view" id="clinical_history_form">
            <field name="name">clinical history</field>    
            <field name="model">clinical_history</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="code_history"  options="{'no_create': True, 'no_edit' : True}"/>
                            <field name="questionnarie_id" options="{'no_create': True, 'no_edit' : True}" readonly='1'/>
                            <field name="session_ids" readonly='1'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    <!-- Action Server View -->

        <record id="clinical_history_view_action" model="ir.actions.act_window">
            <field name="name">Historias Clinicas</field>
            <field name="res_model">clinical_history</field>
            <field name="view_mode">tree,form</field>
        </record>

    <!-- Menu -->
        <menuitem name="Historias Clinicas" id="clinical_history_menu_item" sequence="10" action="clinical_history_view_action" parent="patient_menu_item"/>

    </data>
</odoo>